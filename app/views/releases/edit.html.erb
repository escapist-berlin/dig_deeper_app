<div class="container-edit", style="cover">
  <div class="row justify-content-center">
    <div class="col-8 mb-3">
    <%= link_to "Back to release", :back, class:"btn btn-secondary"%>
      <h2 class="edit-title">Edit</h2>
      <%= simple_form_for [@list, @release], html: {id: "form-design"} do |f| %>
        <%= f.input :artist%>
        <%= f.input :title %>
        <%= f.input :label %>
        <%= f.input :catalog_number %>
        <%= f.input :format %>
        <%= f.input :released %>
        <%= f.input :styles %>
        <%= f.input :link, placeholder: "Paste here only the src link from bandcamp embedded player"%>
        <%= f.input :cover_url %>
        <%= f.input :comment %>
        <%= f.input :tag, :input_html => {:rows => 10}, collection: ["✅ - I like", "🟡 - Listen again", "❌ - I don't like"] %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
