<div class="dashboard-container">

  <h1>Dashboard</h1>

  <div class="search-form">
    <%= simple_form_for :search, url: results_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :title, input_html: {value: ""} %>
      <%= f.submit "Search", class:"btn btn-primary", id: "btn-custom" %>
    <% end %>
  </div>
<div class = "sportlight_card">
<img src='' alt="" class="cover_img">
  <h6 class = "left">cover</h6>
  <h6 class = "right">Artist</h6>
  <h6>TITle</h6>
  <h6>LABEL</h6>
  <h6>RELEASED</h6>
  <h6>TAGS</h6>
</div>
  <% @releases.each do |release| %>
    <div class = "sportlight_card">

    <img src='<%= release.cover_url  %>' alt="" class="cover_img">
      <h6> <%= release.artist %></h6>
      <h6> <%= link_to release.title, release_path(release.id) %> </h6>

      <h6> <%= release.label %> </h6>
      <h6> <%= release.released %> </h6>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          TAGS
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="#">I like</a></li>
          <li><a class="dropdown-item" href="#">Listen again</a></li>
          <li><a class="dropdown-item" href="#">I dont like</a></li>
        </ul>
      </div>
    </div>


  <% end %>

</div>
